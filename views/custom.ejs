<%- include("./partials/header") %>

<div class="container mt-3">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp page!</h1>
        <p>Naviagate through our hand-picked campgrounds from all over the world
        </p>
        <a class="btn btn-primary" href="#">Add new
            Campground</a>
    </header>
    <div class="row mb-3">
        <div class="col-lg-12">
            <h3>Our most popular campgrounds!!!</h3>
        </div>
    </div>

    <div class="row mb-2">
        <% cloths.forEach(function(custom){ %>
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card">
                    <a class="ribbon">INR <%=custom.price%></a>
                    <img src="<%= custom.image %>" class="card-img-top p-1" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%=custom.name%></h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                      <p><%=custom.category%></p>
                      <a href="#" class="btn btn-primary">Buy</a>
                    </div>
                  </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include("./partials/footer") %>