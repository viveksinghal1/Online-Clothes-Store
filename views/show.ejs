<%- include("./partials/header") %>

<div class="container-md mt-3">
    <div class="row justify-content-center">
        <div class="col-md-8 mt-5">
            <h1 class="text-center" >Your Orders</h1>
            <ul class="list-unstyled mt-3">
                <% foundUser.cart.forEach(function(order) { %>
                    <li class="media mt-3 p-3" style="background-color: rgba(0,128,360,0.15); border-radius: 5px;">
                        <div class="media-body d-flex align-items-center justify-content-between">
                          <h5 class="" style="font-size: 1.5rem; color: darkslategrey"><%=order.clothname%></h5>
                          <% if(order.isWaiting) { %>
                            <p class="" style="color: orangered; font-size: 1.5rem;">Waiting</p>
                            <% } else if (order.isDone) {%>
                                <p class="" style="font-size: 1.5rem;">Done</p>
                                <% } else { %>
                                    <p class="" style="font-size: 1.5rem;"></p><% } %>
                        </div>
                    </li>
                <% }); %>
            </ul>
        </div>
    </div>
</div>

<%- include("./partials/footer") %>